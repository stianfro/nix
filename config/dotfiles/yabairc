sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

yabai -m config top_padding    5
yabai -m config bottom_padding 5
yabai -m config left_padding   5
yabai -m config right_padding  5

yabai -m config window_gap     5
yabai -m config window_opacity off
yabai -m config window_shadow  off

yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.90

yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Dato.+" manage=off
yabai -m rule --add app="^1Password$" manage=off
yabai -m rule --add app="^CleanShot X$" manage=off
yabai -m rule --add app="^Steam$" manage=off
yabai -m rule --add app="^ClickUp$" manage=off
yabai -m rule --add app="^To Do$" manage=off
yabai -m rule --add title="Dato" manage=off

borders active_color=0xffe1e3e4 inactive_color=0xff494d64 width=2.0 hidpi=on &
